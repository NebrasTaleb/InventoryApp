<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_overview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_weight="1"
        android:padding="8dp"
        android:textSize="18sp"
        tools:text="product name is here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/zero_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="54 $" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="@dimen/zero_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="34 piece"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sell_button"
            android:layout_width="@dimen/button_item_width"
            android:layout_height="@dimen/button_item_height"
            android:background="@drawable/ic_sell"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

</LinearLayout>